extends layout

block content
  - const pageTitle = title || 'Create Article'
  - const isEditing = Boolean(formData && formData.articleId)
  - const pageMode = isEditing ? 'edit' : 'create'
  - const initialTitle = formData && formData.title ? formData.title : ''
  - const initialContent = formData && formData.content ? formData.content : ''
  - const initialArticleId = formData && formData.articleId ? formData.articleId : ''
  - const initialLanguage = formData && formData.language === 'ar' ? 'ar' : 'en'
  - const titleError = errors && errors.title ? errors.title : ''
  - const contentError = errors && errors.content ? errors.content : ''
  section.article-create-shell
    .article-create-header
      h1#articlePageTitle.article-create-title(data-mode=pageMode)= pageTitle
      p#articlePageSubtitle.article-create-subtitle(data-mode=pageMode)= isEditing ? 'Continue editing this article, save as draft, or publish when final.' : 'Write and publish an article with rich formatting from one focused workspace.'
    .article-create-grid
      .article-create-card
        form#adminCreateArticleForm(method="POST" action="/create_article" novalidate)
          input(type="hidden" name="articleId" value=initialArticleId)
          .mb-3
            label#articleLanguageLabel.form-label(for="articleLanguage") Language
            select#articleLanguage.form-select(name="language")
              option(value="en" selected=initialLanguage === 'en') English
              option(value="ar" selected=initialLanguage === 'ar') Arabic
            .form-text#articleLanguageHelp English is default. Switch to Arabic for right-to-left writing.
          .mb-3
            label#articleTitleLabel.form-label(for="articleTitle") Title
            input#articleTitle.form-control.auth-input(
              type="text"
              name="title"
              maxlength="140"
              value=initialTitle
              dir=initialLanguage === 'ar' ? 'rtl' : 'ltr'
              required
              aria-invalid=titleError ? 'true' : 'false'
              aria-describedby="articleTitleHelp articleTitleError"
              placeholder="e.g. Building disciplined worship habits"
            )
            .form-text#articleTitleHelp Keep it concise and clear (max 140 characters).
            if titleError
              p#articleTitleError.admin-feedback.text-danger= titleError
            else
              p#articleTitleError.admin-feedback.d-none
          .mb-3
            label#articleContentLabel.form-label(for="content") Content
            textarea#content.form-control.article-editor(
              name="content"
              rows="12"
              dir=initialLanguage === 'ar' ? 'rtl' : 'ltr'
              aria-invalid=contentError ? 'true' : 'false'
              aria-describedby="articleContentError"
            )= initialContent
            if contentError
              p#articleContentError.admin-feedback.text-danger= contentError
            else
              p#articleContentError.admin-feedback.d-none
          .d-flex.flex-wrap.gap-2
            button#articleSaveDraftBtn.btn.btn-outline-secondary(type="submit" name="intent" value="draft") Save Draft
            button#articlePublishBtn.btn.admin-btn(type="submit" name="intent" value="published") Publish Article
            a#articleBackBtn.btn.btn-outline-secondary(href="/dashboard") Back to Dashboard
      .article-create-card
        h2#articlePreviewPanelTitle.article-preview-title Live Preview
        p#articlePreviewPanelSubtitle.article-preview-subtitle Review formatting before publishing.
        .article-preview-box
          h3#articlePreviewTitle.article-preview-heading(dir=initialLanguage === 'ar' ? 'rtl' : 'ltr')= initialTitle || 'Untitled article'
          .article-preview-content#articlePreviewContent(dir=initialLanguage === 'ar' ? 'rtl' : 'ltr')
            p.text-muted Content preview will appear here.

block scripts
  script(src="https://cdn.ckeditor.com/ckeditor5/39.0.0/classic/ckeditor.js")
  script(src="/javascripts/adminCreateArticle.js")
