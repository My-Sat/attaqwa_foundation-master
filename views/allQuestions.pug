extends layout

block content
  section.question-shell
    .question-card
      .question-head
        h1.question-title All Questions
        p.question-subtitle Browse answered questions and open any item for full details.

      if questions && questions.length
        ul.question-feed
          each question in questions
            li.question-feed-item
              a.question-feed-link(href=`/question/${question._id}`)= question.question
      else
        p.text-muted.mb-0 No answered questions available.
