extends layout

block content
  section.home-hero
    .hero-content
      h1.hero-title At-Taqwa Foundation
      p.hero-subtitle The gateway to taqwa through live teaching, practical resources, and trusted answers.
      .hero-actions
        a.btn.btn-donate(href="/donate") Donate Now

  section.home-grid
    .row.g-4
      .col-12.col-lg-8
        .panel.live-panel
          .panel-header
            h2 Live Stream
            p Live stream starts at 6:30 PM local time.
          p#countdown.countdown-text
          .iframe-container
            iframe(
              src=liveVideoUrl
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              title="Live stream player"
            )

      .col-12.col-lg-4
        .panel.ask-panel
          a.btn.btn-live-class(href="/live_class_auth")
            i.fas.fa-broadcast-tower.me-2
            | Join Live Class
          .ask-brand
            img.sheesu(src="/images/sheesu.jpg" alt="Sheesu")
            a.btn.btn-ask(href="/ask_sheesu") Ask Shiisu
          h3.panel-section-title Recent Questions and Answers
          ul.question-list.list
            if questions.length
              each question, idx in questions
                li
                  a(href=`/question/${question._id}`) #{question.question}
                if idx !== questions.length - 1
                  hr
            else
              li.text-muted No answered questions yet.
          a.btn.btn-view-more(href="/all_questions") View More Questions

    .row.g-4.mt-1
      .col-12.col-lg-6
        .panel.resources-panel
          h3.panel-section-title Videos
          ul.video-list.list
            if videoCategories.length
              each category in videoCategories
                li
                  a(href=category.url) #{category.title}
            else
              li.text-muted No video categories available.

      .col-12.col-lg-6
        .panel.resources-panel
          h3.panel-section-title Articles and Curricular
          ul.article-list.list
            if articles.length
              each article in articles
                li
                  a(href=`/article/${article._id}`) #{article.title}
            else
              li.text-muted No articles available.

    .row.mt-4
      .col-12
        .visitors-bottom
          span Visitors
          strong= visitorCount
