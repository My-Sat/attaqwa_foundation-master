extends layout

block content
  section.question-shell
    .question-card
      .question-head
        h1.question-title Ask Shiisu
        p.question-subtitle Submit your question and receive a response when it is reviewed.

      if success && success.length > 0
        .alert.alert-success.question-alert= success[0]

      if error && error.length > 0
        .alert.alert-danger.question-alert= error[0]

      form(action="/ask_sheesu" method="POST")
        .mb-3
          label.form-label(for="question") Your Question
          textarea#question.form-control.question-textarea(name="question" rows="6" maxlength="1000" required)
        button.btn.question-submit(type="submit") Submit Question
