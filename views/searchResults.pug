extends layout

block content
  section.search-shell
    .search-card
      h1.search-title Search Results
      p.search-subtitle Showing results for "#{query}"

      .search-section
        h2.search-section-title Questions
        if questions.length > 0
          ul.search-question-list
            each question in questions
              li.search-question-item
                a.search-question-link(href=`/question/${question._id}`)= question.question
                if question.answer
                  p.search-answer-preview= question.answer
        else
          p.text-muted.mb-0 No questions matched your search.

      .search-section.mt-4
        h2.search-section-title Videos
        if videos.length > 0
          .row.g-3
            each video in videos
              .col-12.col-md-6.col-lg-4
                .search-video-card
                  h3.search-video-title= video.title
                  .iframe-container
                    iframe(
                      src=video.youtubeUrl
                      title="YouTube video player"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    )
        else
          p.text-muted.mb-0 No videos matched your search.
