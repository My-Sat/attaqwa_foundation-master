extends layout

block content
  style.
    .donate-page {
      max-width: 900px;
      margin: 2.5rem auto 1.5rem;
    }
    .donate-hero {
      border: 1px solid #dce8ff;
      border-radius: 20px;
      padding: 2rem 1.25rem;
      background: linear-gradient(140deg, #f6faff 0%, #ffffff 55%, #f0f7ff 100%);
      box-shadow: 0 16px 40px rgba(15, 60, 120, 0.08);
    }
    .donate-title {
      color: #0f3c78;
      font-weight: 700;
      letter-spacing: .02em;
    }
    .verse-card,
    .details-card {
      border: 1px solid #e6eef8;
      border-radius: 16px;
      background: #ffffff;
      box-shadow: 0 10px 24px rgba(10, 40, 80, 0.06);
    }
    .verse-arabic {
      direction: rtl;
      font-size: clamp(1.35rem, 2vw, 1.8rem);
      line-height: 1.9;
      color: #9d1f1f;
      margin-bottom: 1rem;
      font-weight: 600;
    }
    .verse-english {
      color: #4f5e73;
      font-size: 1.02rem;
      margin-bottom: 0;
    }
    .details-title {
      color: #0f3c78;
      font-size: 1.15rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    .donate-item {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: .5rem;
      font-weight: 600;
      color: #253349;
      margin-bottom: .75rem;
      flex-wrap: wrap;
    }
    .donate-item:last-child {
      margin-bottom: 0;
    }
    .donate-value {
      color: #0f7a3d;
      font-weight: 700;
    }

  .donate-page
    .donate-hero.text-center
      h1.donate-title.mb-3 Donate to Support Our Cause
      p.text-muted.mb-0 Your support helps us sustain and expand beneficial programs.

    .verse-card.mt-4.p-4.p-md-5.text-center
      p.verse-arabic
        | إِنَّ ٱلْمُصَّدِّقِينَ وَٱلْمُصَّدِّقَٰتِ وَأَقْرَضُوا۟ ٱللَّهَ قَرْضًا حَسَنًا يُضَٰعَفُ لَهُمْ وَلَهُمْ أَجْرٌ كَرِيمٌ
      p.verse-english
        | "Indeed, the men who practice charity and the women who do so and [they who] have loaned Allah a goodly loan - it will be multiplied for them, and they will have a noble reward." (Qur'an 57:18)

    .details-card.mt-4.p-4.p-md-5.text-center
      h2.details-title Donation Details
      .donate-item
        i.fas.fa-mobile-alt(aria-hidden="true")
        span Mobile Money Number:
        span.donate-value +233591459200
      .donate-item
        i.fas.fa-user-check(aria-hidden="true")
        span Name on Mobile Money:
        span.donate-value At-taqwafoundation and Humanitarian Service
